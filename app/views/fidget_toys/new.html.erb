<% @toy.errors.full_messages.each do |error| %>
  <h2><%= error %></h2>
  <% end %>


<h1>New Toy</h1>

<%= form_tag "/toys", method: :post do %>
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div class="black-text">
    Supplier: <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  <div>
    Price: <input type="text" name="price" value="<%= @product.price %>">
  </div>
  <input type="submit" value="Create toy">
<% end %>